    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .Register {
            background-color: blue;
            color: white;
            text-align: center;
            width: 310px;
            padding: 10px;
            cursor: pointer;
        }
        h1 {
            text-align: center;
        }
        .container {
            width: 300px;
            margin: auto;
        }
        input {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
        }
    </style>
